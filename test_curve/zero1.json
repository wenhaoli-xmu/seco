{
    "train_epochs": 1,
    "train_batch_size": 8,
    "train_micro_batch_size_per_gpu": 1,
    "gradient_accumulation_steps": 1,

    "optimizer": {
        "type": "Adam",
        "params": {
            "torch_adam": true,
            "lr": 5e-5,
            "betas": [
                0.9,
                0.95
            ],
            "eps": 1e-8,
            "weight_decay": 0.05
        }
    },

    "bf16": {
        "enabled": true
    },

    "enable_gradient_clipping_with_value": 1.0,

    "zero_optimization": {
        "stage": 1
    }
}